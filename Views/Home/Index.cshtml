@{
    ViewData["Title"] = "Асосӣ";
}

<!-- Hero Section -->
<div class="hero-section text-white text-center py-5" style="background: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('https://images.unsplash.com/photo-1501504905252-473c47e087f8?ixlib=rb-4.0.3') center/cover;">
    <div class="container py-5">
        <h1 class="display-4 fw-bold mb-4">Хуш омадед ба Мактаби онлайн</h1>
        <p class="lead mb-4">Таҳсилоти босифатро бо беҳтарин омӯзгорон онлайн гиред</p>
        <a href="#courses" class="btn btn-primary btn-lg">Оғози таҳсил</a>
    </div>
</div>

<!-- Features Section -->
<section class="features py-5">
    <div class="container">
        <div class="row">
            <div class="col-md-4 text-center mb-4">
                <div class="feature-box p-4">
                    <i class="fas fa-laptop-code fa-3x text-primary mb-3"></i>
                    <h3>Таҳсили онлайн</h3>
                    <p>Дар вақти мувофиқ аз ҳар гӯшаи ҷаҳон таҳсил кунед</p>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="feature-box p-4">
                    <i class="fas fa-certificate fa-3x text-primary mb-3"></i>
                    <h3>Сертификатҳо</h3>
                    <p>Пас аз хатми курс сертификат гиред</p>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="feature-box p-4">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h3>Омӯзгорони ботаҷриба</h3>
                    <p>Аз беҳтарин мутахассисон омӯзед</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Popular Courses Section -->
<section id="courses" class="courses py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Курсҳои маъмул</h2>
        <div class="row">
            @foreach (var course in Model.PopularCourses)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title">
                        <div class="card-body">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text">@course.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-primary fw-bold">@course.Price сомонӣ</span>
                                <a href="/Course/Details/@course.Id" class="btn btn-outline-primary">Муфассал</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a href="/Course" class="btn btn-primary btn-lg">Ҳамаи курсҳо</a>
        </div>
    </div>
</section>

<!-- About Section -->
<section id="about" class="about py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2 class="mb-4">Дар бораи мактаби мо</h2>
                <p class="lead">Мо таҳсилоти босифати онлайнро барои ҳамаи хоҳишмандони таҳсил ва рушд пешниҳод мекунем.</p>
                <p>Рисолати мо - дастрас кардани таҳсил барои ҳар як нафар аст. Мо интихоби васеи курсҳоро аз омӯзгорони ботаҷриба пешниҳод мекунем, ки ба шумо дар ноил шудан ба ҳадафҳоятон кумак мерасонанд.</p>
                <ul class="list-unstyled">
                    <li><i class="fas fa-check text-primary me-2"></i> Зиёда аз 100 курси онлайн</li>
                    <li><i class="fas fa-check text-primary me-2"></i> Омӯзгорони ботаҷриба</li>
                    <li><i class="fas fa-check text-primary me-2"></i> Ҷадвали чандир</li>
                    <li><i class="fas fa-check text-primary me-2"></i> Сертификатҳо пас аз хатм</li>
                </ul>
            </div>
            <div class="col-md-6">
                <img src="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?ixlib=rb-4.0.3" alt="Дар бораи мо" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact" class="contact py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-5">Бо мо тамос гиред</h2>
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Маълумоти тамос</h5>
                        <p class="card-text">
                            <i class="fas fa-map-marker-alt text-primary me-2"></i> Душанбе, Тоҷикистон<br>
                            <i class="fas fa-phone text-primary me-2"></i> +992 XX XXX XX XX<br>
                            <i class="fas fa-envelope text-primary me-2"></i> info@onlineschool.tj
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Шакли тамос</h5>
                        <form>
                            <div class="mb-3">
                                <label for="name" class="form-label">Ном</label>
                                <input type="text" class="form-control" id="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Почтаи электронӣ</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Паём</label>
                                <textarea class="form-control" id="message" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Фиристодан</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
